<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/fragment_compte"

        >
        <TextView
            android:id="@+id/text_connexion"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_marginStart="130dp"
            android:layout_marginLeft="150dp"
            android:layout_marginEnd="30dp"
            android:layout_marginRight="150dp"
            android:gravity="center"
            android:text="Connexion : "
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_centerHorizontal="true" />


    <EditText
        android:id="@+id/editmail_connexion"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_connexion"
        android:layout_centerInParent="true"
        android:layout_marginTop="150dp"
        android:ems="10"
        android:hint="@string/prompt_email"
        android:inputType="textEmailAddress" />


    <EditText
        android:id="@+id/editmdp_connexion"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editmail_connexion"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:hint="@string/prompt_password"
        android:inputType="textPassword" />

    <Button
            android:id="@+id/btn_connecter"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Se connecter"
            android:layout_below="@+id/editmdp_connexion"
            android:layout_marginTop="40dp"
            />

        <Button

            android:layout_width="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="S'incrire"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_connecter"
            android:layout_marginTop="0dp"
            />

    </RelativeLayout>


