<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TextView
        android:id="@+id/text_connecter"
        android:layout_width="261dp"
        android:layout_height="85dp"
        android:text="Bonjour Soizik"
        android:layout_marginLeft="5dp"
        android:textSize="30sp"
        android:textStyle="bold" />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="84dp"
        android:layout_alignEnd="@id/text_connecter"
        android:layout_marginEnd="-152dp"
        android:layout_marginRight="-152dp"
        android:layout_alignRight="@id/text_connecter" />

    <TextView
        android:id="@+id/description"
        android:layout_width="406dp"
        android:layout_height="214dp"
        android:layout_below="@id/text_connecter"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:text="Email :\nNom :\nPrénom :\nPseudo :\nDescription :" />
    <TextView
        android:id="@+id/score_compte"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/description"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:text="Score :" />




    <Button
        android:id="@+id/btn_modifier"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Modifier"
        android:layout_below="@+id/description"
        android:layout_marginTop="40dp"
        />
    <Button
        android:id="@+id/btn_deconnexion"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Déconnexion"
        android:layout_below="@+id/btn_modifier"
        android:layout_marginTop="40dp"
        />



</RelativeLayout>


